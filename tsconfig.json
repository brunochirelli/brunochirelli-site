{
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["**/*.js"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  }
}
